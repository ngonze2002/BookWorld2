<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/light_purple"
    android:id="@+id/main"
    android:layout_height="match_parent">

    <!-- Top layout with backButton, title, and logoutButton -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/top"
        android:background="@drawable/cardview_background">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="18dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/baseline_arrow_back_24"
            android:contentDescription="Back button" />

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Search"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/square2"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="11dp"
            android:layout_marginStart="33dp"
            android:layout_toStartOf="@id/three_dotButton"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/three_dotButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_dot"
            android:contentDescription="Menu button" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <!-- Text view for Explore by Genre -->
            <TextView
                android:id="@+id/explore_by_genre_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="21sp"
                android:text="EXPLORE BY GENRE"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="9dp"
                android:alpha="0.7"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- First Row of Items -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <!-- Group Item -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        app:cardCornerRadius="24dp">

                        <LinearLayout
                            android:id="@+id/art"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/ic_group"
                                android:layout_width="110dp"
                                android:layout_height="60dp" />

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:padding="14dp"
                                android:background="@drawable/genre_cardview"
                                android:text="Art"
                                android:textColor="@color/material_500"
                                android:textSize="19sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Help Item -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        app:cardCornerRadius="24dp">

                        <LinearLayout
                            android:id="@+id/technologyLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                            android:src="@drawable/technology"
                                android:layout_width="130dp"
                                android:layout_height="70dp" />

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/genre_cardview"
                                android:gravity="center"
                                android:padding="14dp"
                                android:text="Technology"
                                android:textColor="@color/material_500"
                                android:textSize="19sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- First Row of Items -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="0dp">

                    <!-- Group Item -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        app:cardCornerRadius="24dp">

                        <LinearLayout
                            android:id="@+id/businessLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="60dp"
                                android:src="@drawable/business"/>

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:padding="14dp"
                                android:background="@drawable/genre_cardview"
                                android:text="Business"
                                android:textColor="@color/material_500"
                                android:textSize="19sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Help Item -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        app:cardCornerRadius="24dp">

                        <LinearLayout
                            android:id="@+id/animationLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:src="@drawable/animation"
                                android:layout_width="130dp"
                                android:layout_height="70dp" />

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/genre_cardview"
                                android:gravity="center"
                                android:padding="14dp"
                                android:text="Animation"
                                android:textColor="@color/material_500"
                                android:textSize="19sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- First Row of Items -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="0dp">

                    <!-- Group Item -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        app:cardCornerRadius="24dp">

                        <LinearLayout
                            android:id="@+id/health_sciencesLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:src="@drawable/health"
                                android:layout_width="110dp"
                                android:layout_height="60dp" />

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:padding="14dp"
                                android:background="@drawable/genre_cardview"
                                android:text="Health Sciences"
                                android:textColor="@color/material_500"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Help Item -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        app:cardCornerRadius="24dp">

                        <LinearLayout
                            android:id="@+id/comicsLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:src="@drawable/comic"
                                android:layout_width="130dp"
                                android:layout_height="70dp" />

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/genre_cardview"
                                android:gravity="center"
                                android:padding="14dp"
                                android:text="Comics"
                                android:textColor="@color/material_500"
                                android:textSize="19sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- First Row of Items -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <!-- Group Item -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        app:cardCornerRadius="24dp">

                        <LinearLayout
                            android:id="@+id/fantasyLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:src="@drawable/fantasy"
                                android:layout_width="110dp"
                                android:layout_height="60dp" />

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:padding="14dp"
                                android:background="@drawable/genre_cardview"
                                android:text="Fantasy"
                                android:textColor="@color/material_500"
                                android:textSize="19sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Help Item -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        app:cardCornerRadius="24dp">

                        <LinearLayout
                            android:id="@+id/historyLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:src="@drawable/history"
                                android:layout_width="130dp"
                                android:layout_height="70dp" />

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/genre_cardview"
                                android:gravity="center"
                                android:padding="14dp"
                                android:text="History"
                                android:textColor="@color/material_500"
                                android:textSize="19sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- First Row of Items -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="19dp">

                    <!-- Group Item -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        app:cardCornerRadius="24dp">

                        <LinearLayout
                            android:id="@+id/non_fiction"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="60dp" />

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:padding="14dp"
                                android:background="@drawable/genre_cardview"
                                android:text="Non-Fiction"
                                android:textColor="@color/material_500"
                                android:textSize="19sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Help Item -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        app:cardCornerRadius="24dp">

                        <LinearLayout
                            android:id="@+id/fictionLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView

                                android:layout_width="130dp"
                                android:layout_height="70dp" />

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/genre_cardview"
                                android:gravity="center"
                                android:padding="14dp"
                                android:text="Fiction"
                                android:textColor="@color/material_500"
                                android:textSize="19sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle_top"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/homelayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mybookslayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_books" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Books"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/searchlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/morelayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_more" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
